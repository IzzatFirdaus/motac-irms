#--------------------------------------------------------------------------
# MOTAC Integrated Resource Management System - Testing Environment
#--------------------------------------------------------------------------
# Use for automated tests or isolated development.
# Mirrors .env, but uses a separate DB and disables mail.

#--------------------------------------------------------------------------
# Application Configuration
#--------------------------------------------------------------------------
APP_NAME="motac-irms"
APP_NICKNAME="MOTAC IRMS"
APP_VERSION="1.0.0"
APP_ENV=testing
APP_KEY=base64:ps45u9S+Gc2PvZZCgt5EIDlRXHRWZwG/BazRRV3P2pU=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Kuala_Lumpur

DEBUGBAR_ENABLED=false

#--------------------------------------------------------------------------
# Logging Configuration
#--------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

#--------------------------------------------------------------------------
# Database Configuration
#--------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=motac_irms_test              # Separate DB for tests
DB_USERNAME=root
DB_PASSWORD=

#--------------------------------------------------------------------------
# Broadcasting, Cache, Filesystem, Queue, Session Configuration
#--------------------------------------------------------------------------
BROADCAST_DRIVER=log
CACHE_DRIVER=array                       # Use array cache for speed in tests
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync                    # Run jobs immediately in tests
SESSION_DRIVER=array
SESSION_LIFETIME=30
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=

#--------------------------------------------------------------------------
# Redis (Optional for integration tests)
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#--------------------------------------------------------------------------
# Mail Configuration (Disable real mail in tests)
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@motac.gov.my"
MAIL_FROM_NAME="${APP_NICKNAME}"

#--------------------------------------------------------------------------
# Webhook for test
WEBHOOK_CLIENT_SECRET=

#--------------------------------------------------------------------------
# AWS S3 (Not used in tests)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#--------------------------------------------------------------------------
# Pusher (Websockets, not used in tests)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_USE_TLS=true
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
MIX_PUSHER_USE_TLS="${PUSHER_USE_TLS}"

#--------------------------------------------------------------------------
# MOTAC Theme & Layout Configuration
THEME_LAYOUT=vertical
THEME_SKIN=theme-motac
THEME_STYLE=light
THEME_RTL_ASSETS_SUPPORT=true
THEME_DEFAULT_RTL_MODE=false
THEME_HAS_CUSTOMIZER_JS=true
THEME_DISPLAY_CUSTOMIZER_UI=false
THEME_MENU_FIXED=true
THEME_MENU_COLLAPSED=false
THEME_NAVBAR_FIXED=true
THEME_NAVBAR_DETACHED=false
THEME_FOOTER_FIXED=false
THEME_HORIZONTAL_MENU_HOVER=true
THEME_SHOW_DROPDOWN_ON_HOVER=true
THEME_CONTENT_CONTAINER=container-fluid
THEME_NAVBAR_CONTAINER=container-fluid
THEME_PRIMARY_COLOR_MOTAC="#0055A4"
