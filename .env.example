#--------------------------------------------------------------------------
# MOTAC Integrated Resource Management System - Example Environment File
#--------------------------------------------------------------------------
# Copy this file to .env and fill in your own credentials for each environment.
# !!! DO NOT commit real secrets to version control. !!!

#--------------------------------------------------------------------------
# Application Configuration
#--------------------------------------------------------------------------
APP_NAME="motac-irms"
APP_NICKNAME="MOTAC IRMS"
APP_VERSION="1.0.0"
APP_ENV=local
APP_KEY= # Generate using `php artisan key:generate`
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Kuala_Lumpur

DEBUGBAR_ENABLED=true

#--------------------------------------------------------------------------
# Logging Configuration
#--------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

#--------------------------------------------------------------------------
# Database Configuration
#--------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=motac_irms_dev
DB_USERNAME=root
DB_PASSWORD=

#--------------------------------------------------------------------------
# Broadcasting, Cache, Filesystem, Queue, Session Configuration
#--------------------------------------------------------------------------
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=

#--------------------------------------------------------------------------
# Redis / Memcached (Optional for Local Dev)
#--------------------------------------------------------------------------
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#--------------------------------------------------------------------------
# Mail Configuration (Mailtrap for development)
#--------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@motac.gov.my"
MAIL_FROM_NAME="${APP_NICKNAME}"

#--------------------------------------------------------------------------
# Webhook Configuration (set your own for production)
#--------------------------------------------------------------------------
WEBHOOK_CLIENT_SECRET=

#--------------------------------------------------------------------------
# AWS S3 (Leave empty for local)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#--------------------------------------------------------------------------
# Pusher (Websockets)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_USE_TLS=true
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
MIX_PUSHER_USE_TLS="${PUSHER_USE_TLS}"

#--------------------------------------------------------------------------
# MOTAC Theme & Layout Configuration (for UI)
THEME_LAYOUT=vertical
THEME_SKIN=theme-motac
THEME_STYLE=light
THEME_RTL_ASSETS_SUPPORT=true
THEME_DEFAULT_RTL_MODE=false
THEME_HAS_CUSTOMIZER_JS=true
THEME_DISPLAY_CUSTOMIZER_UI=true
THEME_MENU_FIXED=true
THEME_MENU_COLLAPSED=false
THEME_NAVBAR_FIXED=true
THEME_NAVBAR_DETACHED=false
THEME_FOOTER_FIXED=false
THEME_HORIZONTAL_MENU_HOVER=true
THEME_SHOW_DROPDOWN_ON_HOVER=true
THEME_CONTENT_CONTAINER=container-fluid
THEME_NAVBAR_CONTAINER=container-fluid
THEME_PRIMARY_COLOR_MOTAC="#0055A4"
