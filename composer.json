{
  "_comment": [
    "MOTAC IRMS - composer.json",
    "This file defines PHP dependencies, autoloading, and scripts for the MOTAC Integrated Resource Management System (MOTAC_IRMS).",
    "Tailored for Laravel 11, PHP 8.2+, and modern development and QA workflows.",
    "Key packages include Laravel Jetstream, Livewire, Spatie activity log & permissions, maatwebsite/excel, and MOTAC-specific helpers.",
    "Development tools include Rector, Larastan, Pint, Microscope, Debugbar, IDE helper, and Vuexy Bootstrap Jetstream.",
    "To install dependencies: run 'composer install'."
  ],
  "name": "motac/irms",
  "type": "project",
  "description": "MOTAC Integrated Resource Management System (IRMS) - Laravel 11, Livewire, Jetstream, Vuexy, and BPM customizations.",
  "keywords": [
    "framework",
    "laravel",
    "motac",
    "irms",
    "livewire",
    "jetstream",
    "vuexy",
    "bpm"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "asantibanez/livewire-charts": "^4.1",
    "barryvdh/laravel-dompdf": "^3.1",
    "guzzlehttp/guzzle": "^7.2",
    "laravel/framework": "^11.0",
    "laravel/jetstream": "^5.0",
    "laravel/sanctum": "^4.0",
    "laravel/tinker": "^2.8",
    "league/commonmark": "^2.7",
    "livewire/livewire": "^3.4",
    "maatwebsite/excel": "^3.1",
    "nyholm/psr7": "^1.8",
    "opcodesio/log-viewer": "^3.1",
    "railsware/mailtrap-php": "^3.1",
    "spatie/laravel-activitylog": "^4.10",
    "spatie/laravel-permission": "^6.18",
    "spatie/laravel-webhook-client": "^3.0",
    "symfony/http-client": "^7.3",
    "symfony/var-dumper": "*"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "*",
    "barryvdh/laravel-ide-helper": "^3.5",
    "driftingly/rector-laravel": "^1.2",
    "fakerphp/faker": "^1.9.1",
    "friendsofphp/php-cs-fixer": "*",
    "imanghafoori/laravel-microscope": "1.0.377",
    "larastan/larastan": "^2.0",
    "laravel/boost": "^1.0",
    "laravel/pint": "^1.22",
    "laravel/sail": "^1.21",
    "mockery/mockery": "^1.4.4",
    "nunomaduro/collision": "^8.1",
    "nunomaduro/phpinsights": "^2.13",
    "phpmd/phpmd": "^2.15",
    "phpunit/phpunit": "^11.0",
    "pixinvent/vuexy-laravel-bootstrap-jetstream": "^1.2",
    "rector/rector": "^1.2",
    "spatie/laravel-ignition": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    },
    "files": [
      "app/Helpers/Helpers.php"
    ]
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
