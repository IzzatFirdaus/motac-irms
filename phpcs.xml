<?xml version="1.0"?>
<ruleset name="MOTAC IRMS PHPCS Rules">
    <description>PSR-12 with sensible excludes and relaxed test method naming.</description>

    <!-- Base standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    <file>tests</file>
    <file>bootstrap</file>

    <!-- Exclude generated and vendor paths -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>public/build/*</exclude-pattern>

    <!-- Relax method naming for tests -->
    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>tests/**</exclude-pattern>
    </rule>

    <!-- Many migrations are machine-generated; allow no namespace -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>database/migrations/*</exclude-pattern>
    </rule>

    <!-- Migrations often include file headers generated by frameworks; skip header order sniff -->
    <rule ref="PSR12.Files.FileHeader">
        <exclude-pattern>database/migrations/*</exclude-pattern>
    </rule>

    <!-- Set report width for better readability in terminals -->
    <arg name="colors"/>
    <arg value="n"/>
    <arg name="report-width" value="140"/>

    <!-- Exclude common non-source folders -->
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>public/*</exclude-pattern>

    <!-- Relax line length limits: warn at 140, absolute limit 200 -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="140" />
            <property name="absoluteLineLimit" value="400" />
        </properties>
    </rule>
</ruleset>
